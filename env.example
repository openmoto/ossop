# OSSOP Security Stack Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=ossop
NETWORK_NAME=security-stack-net
TZ=UTC
HOSTNAME=localhost

# =============================================================================
# OPENSEARCH CONFIGURATION
# =============================================================================
OPENSEARCH_VERSION=2.11.1
OPENSEARCH_HOSTNAME=opensearch
OPENSEARCH_PORT_API=9200
OPENSEARCH_JVM_HEAP=1g
OPENSEARCH_INITIAL_ADMIN_PASSWORD=StrongPassword123!
OPENSEARCH_DASHBOARDS_HOSTNAME=opensearch-dashboards
OPENSEARCH_DASHBOARDS_PORT=5601

# =============================================================================
# FILEBEAT CONFIGURATION
# =============================================================================
FILEBEAT_OSS_VERSION=8.10.2

# =============================================================================
# WAZUH CONFIGURATION
# =============================================================================
WAZUH_MANAGER_VERSION=4.7.4
WAZUH_MANAGER_HOSTNAME=wazuh-manager
WAZUH_API_PORT=55000
WAZUH_AGENT_CONN_PORT=1514
WAZUH_AGENT_REG_PORT=1515

# =============================================================================
# POSTGRES CONFIGURATION (Used by multiple services)
# =============================================================================
POSTGRES_VERSION=14

# =============================================================================
# SHUFFLE CONFIGURATION
# =============================================================================
SHUFFLE_VERSION=2.1.0
SHUFFLE_DB_HOSTNAME=shuffle-db
SHUFFLE_OPENSEARCH_VERSION=2.11.1
SHUFFLE_OPENSEARCH_HOSTNAME=shuffle-opensearch
SHUFFLE_OPENSEARCH_PASSWORD=StrongPassword123!
SHUFFLE_BACKEND_HOSTNAME=shuffle-backend
SHUFFLE_BACKEND_PORT=5001
SHUFFLE_FRONTEND_HOSTNAME=shuffle-frontend
SHUFFLE_FRONTEND_PORT=80
SHUFFLE_ORBORUS_HOSTNAME=shuffle-orborus

# =============================================================================
# IRIS CONFIGURATION
# =============================================================================
IRIS_VERSION=v2.4.23
IRIS_HOSTNAME=iris-web
IRIS_PORT=8080
IRIS_DB_HOSTNAME=iris-db
IRIS_DB_USER=iris
IRIS_DB_NAME=iris
IRIS_DB_PASSWORD=irispass123
IRIS_SECRET_KEY=your-iris-secret-key-change-this-in-production

# =============================================================================
# SPIDERFOOT CONFIGURATION
# =============================================================================
SPIDERFOOT_HOSTNAME=spiderfoot
SPIDERFOOT_PORT=5002

# =============================================================================
# ERAMBA CONFIGURATION
# =============================================================================
ERAMBA_DB_VERSION=10.5
ERAMBA_DB_HOSTNAME=eramba-db
ERAMBA_DB_ROOT_PASSWORD=erambaRootPass123
ERAMBA_DB_USER=eramba
ERAMBA_DB_PASSWORD=erambapass123
ERAMBA_DB_NAME=eramba_community
ERAMBA_HOSTNAME=eramba-web
ERAMBA_PORT=8081

# =============================================================================
# SURICATA CONFIGURATION
# =============================================================================
SURICATA_VERSION=7.0.5
SURICATA_HOSTNAME=suricata

# =============================================================================
# MISP CONFIGURATION
# =============================================================================
MISP_DB_HOSTNAME=misp-db
MISP_DB_ROOT_PASSWORD=mispRootPass123
MISP_DB_NAME=misp
MISP_DB_USER=misp
MISP_DB_PASSWORD=misppass123
MISP_REDIS_HOSTNAME=misp-redis
MISP_REDIS_PASSWORD=mispRedisPass123
MISP_HOSTNAME=misp-web
MISP_PORT=8082

# =============================================================================
# DEFECTDOJO CONFIGURATION
# =============================================================================
DEFECTDOJO_DB_HOSTNAME=defectdojo-db
DEFECTDOJO_DB_USER=defectdojo
DEFECTDOJO_DB_NAME=defectdojo
DEFECTDOJO_DB_PASSWORD=defectdojopass123
DEFECTDOJO_HOSTNAME=defectdojo-app
DEFECTDOJO_PORT=8083
DEFECTDOJO_SECRET_KEY=your-very-long-secret-key-change-this-in-production-make-it-at-least-50-characters

# DefectDojo Admin User Configuration (automatically created on first startup)
DEFECTDOJO_ADMIN_USER=admin
DEFECTDOJO_ADMIN_EMAIL=admin@defectdojo.local
DEFECTDOJO_ADMIN_PASSWORD=admin

# DefectDojo Initialization (set to true for first startup, false for subsequent runs)
DD_INITIALIZE=true

# =============================================================================
# UPTIME KUMA CONFIGURATION
# =============================================================================
UPTIME_KUMA_PORT=3001
UPTIME_KUMA_HOSTNAME=uptime-kuma

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Change all default passwords before production use
# 2. Generate strong secret keys (50+ characters) for all services
# 3. Use strong database passwords (mix of letters, numbers, symbols)
# 4. Consider using Docker secrets for sensitive values in production
# 5. Set DD_INITIALIZE=false after DefectDojo initial setup to prevent re-initialization
# 6. Update TZ to your local timezone (e.g., America/New_York, Europe/London)
# 7. Change HOSTNAME to your actual domain name in production
